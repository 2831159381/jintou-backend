{
	"type": "nut.core",
	"permits": {
		"spaceAdmin": {
			"alias": "space admin"
		},
		"spaceManager": {
			"alias": "space member"
		},
		"spaceCustomer": {
			"alias": "space customer"
		}
	},
	"accessRolePermits": {
		"allow.apply": {
			"name": "allow.apply"
		},
		"allow.join": {
			"name": "allow.join"
		},
		"allow.approve.auto": {
			"name": "allow.approve.auto"
		}
	},
	"types": {
		"com.normal": {
			"name": "normal",
			"alias": "普通机构",
			"description": "普通机构",
			"roles": [
				{
					"name": "admin",
					"alias": "系统管理员"
				},
				{
					"name": "member",
					"alias": "机构成员"
				},
				{
					"name": "client",
					"alias": "机构客户",
					"grants": {
						"public": "allow.join.auto"
					}
				}
			],
			"apps": [
				"spaceMember"
			]
		},
		"com.myCube":{
			"name": "com.myCube",
			"alias": "我立方机构",
			"description": "管理我立方平台的机构",
			"roles": [
				{
					"name": "admin",
					"alias": "系统管理员"
				},
				{
					"name": "member",
					"alias": "机构成员"
				},
				{
					"name": "client",
					"alias": "机构客户",
					"grants": {
						"public": "allow.join.auto"
					}
				}
			],
			"apps": [
				"spaceMember,spaceProduct,spaceFinance,spaceTrade"
			]
		},
		"person.myCube":{
			"name": "person.myCube",
			"alias": "我立方个人空间",
			"description": "我立方平台的个人空间",
			"roles": [
				{
					"name": "admin",
					"alias": "系统管理员"
				}
			],
			"apps": [
				"myProfile,myFinance,myTrade"
			]
		}
	},
	"userSpaces":{
		"admin@myCube.com":{
			"create": [
				{
					"name":"myCube.com",
					"alias":"我立方机构",
					"type":"myCube"
				}
			]
		},
		"*@myCube.com":{
			"join": "myCube.com",
			"as": "member"
		},
		"other":{
			"join": "myCube.com",
			"as": "client"
		}
	}
}